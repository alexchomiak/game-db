{
    "name": "express-typescript-starter",
    "version": "0.1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
    },
    "author": "Bowden Kelly",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
        "build-ts": "tsc",
        "watch-ts": "tsc-watch --onSuccess \"npm run copy-views\"",
        "copy-views": "rm -rf dist/views && cp -r src/views dist/views",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\"  \"npm run watch-ts\" \"npm run serve-debug\"",
        "test": "ts-node src/tests/index.ts",
        "test-watch": "nodemon --watch 'src/tests/**' --ext 'ts' --exec 'ts-node src/tests/index.ts'"
    },
    "dependencies": {
        "@types/axios": "^0.14.0",
        "@types/bcrypt": "^3.0.0",
        "@types/connect-redis": "0.0.13",
        "@types/cors": "^2.8.8",
        "@types/express-handlebars": "^3.1.0",
        "@types/pg": "^7.14.7",
        "async": "^3.2.0",
        "axios": "^0.20.0",
        "bcrypt": "^5.0.0",
        "bcrypt-nodejs": "^0.0.3",
        "bluebird": "^3.7.2",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-mongo": "^3.2.0",
        "connect-redis": "^4.0.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-handlebars": "^5.2.0",
        "express-session": "^1.17.1",
        "express-validator": "^6.7.0",
        "fast-csv": "^4.3.6",
        "fbgraph": "^1.4.4",
        "lodash": "^4.17.20",
        "lusca": "^1.6.1",
        "mongoose": "^5.11.4",
        "nodemailer": "^6.4.16",
        "passport": "^0.4.1",
        "passport-facebook": "^3.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.5.1",
        "pug": "^2.0.4",
        "redis": "^3.0.2",
        "tsc-watch": "^4.2.9",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/async": "^3.2.5",
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/bluebird": "^3.5.33",
        "@types/body-parser": "^1.19.0",
        "@types/chai": "^4.2.14",
        "@types/compression": "^1.7.0",
        "@types/concurrently": "^4.1.1",
        "@types/connect-mongo": "^3.1.3",
        "@types/errorhandler": "^0.0.32",
        "@types/eslint": "^6.8.1",
        "@types/express": "^4.17.9",
        "@types/express-flash": "0.0.1",
        "@types/express-session": "^1.17.3",
        "@types/jquery": "^3.5.4",
